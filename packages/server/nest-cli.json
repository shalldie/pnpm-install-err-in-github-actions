{
    "$schema": "https://json.schemastore.org/nest-cli",
    "collection": "@nestjs/schematics",
    "sourceRoot": "src",
    "compilerOptions": {
        "deleteOutDir": true,
        "builder": "webpack"
    },
    "projects": {
        "model": {
            "type": "library",
            "root": "libs/model",
            "entryFile": "index",
            "sourceRoot": "libs/model/src",
            "compilerOptions": {
                "tsConfigPath": "libs/model/tsconfig.lib.json"
            }
        },
        "utils": {
            "type": "library",
            "root": "libs/utils",
            "entryFile": "index",
            "sourceRoot": "libs/utils/src",
            "compilerOptions": {
                "tsConfigPath": "libs/utils/tsconfig.lib.json"
            }
        },
        "log": {
            "type": "library",
            "root": "libs/log",
            "entryFile": "index",
            "sourceRoot": "libs/log/src",
            "compilerOptions": {
                "tsConfigPath": "libs/log/tsconfig.lib.json"
            }
        },
        "article": {
            "type": "library",
            "root": "libs/article",
            "entryFile": "index",
            "sourceRoot": "libs/article/src",
            "compilerOptions": {
                "tsConfigPath": "libs/article/tsconfig.lib.json"
            }
        }
    }
}
